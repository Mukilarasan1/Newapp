<h3>update Item</h3>
{{#if msg}}
<div class="alert">{{msg}}</div>
{{/if}}
{{#each rows}}


<form method="post" action="/updateitem/{{this.ID}}" autocomplete="false">
<div class="form-group">
    <label for="name">NAME1</label>
    <input type="text" name="name" value="{{this.NAME1}}">
</div>
<div class="form-group">
    <label for="description">DESCRIPTION1</label>
    <input type="text" name="description" value="{{this.DESCRIPTION1}}">
</div>

<div class="form-group">
    <button type="submit">Save changes</button>
    <a href="/">view all</a>
</div>

</form>
{{/each}}